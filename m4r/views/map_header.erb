    <div id="map-content-header">
      <div class="worldmenuholder">
        <ul class="worldmenu">
          <li class="first"><a href="javascript:return false;" ><%= @country[:name].upcase %> <% unless @country[:name] == "World" %>/ <span id="map-title">Projects by Poverty</span><% end %></a>
            <ul>
              <% if @country[:name] == "World" %>
              <% @country[:regions].each do |region, region_attr| %>
                <li><a href="#" onclick="return wb.setLocation('<%= region_attr[:name] %>',<%= region_attr[:lat] %>,<%= region_attr[:lon] %>,<%= region_attr[:zoom] %>)"><%= region_attr[:name] %></a></li>
              <% end %>
              <% else %>
                <li><a href="#" onclick="return wb.setState(null,'Poverty')">Extreme Poverty (MDG1)</a></li>
                <li><a href="#" onclick="return wb.setState(null,'Malnutrition')">Malnutrition (MDG1)</a></li>
                <li><a href="#" onclick="return wb.setState(null,'Infant Mortality')">Infant Mortality (MDG1)</a></li>
                <li><a href="#" onclick="return wb.setState(null,'Malnutrition')">Births Attended (MDG1)</a></li>
                <li><a href="#" onclick="return wb.setState(null,null,null,['all'])">Project Portfolio</a></li>
                <li><a href="#" onclick="return wb.setState(null,'Poverty',null,['all'])">Projects by Poverty</a></li>
                <li><a href="#" onclick="return wb.setState(null,'Population',null,['all'])">Projects by Population</a></li>
              <% end %>
            </ul>
          </li>
          <!-- ... and so on ... -->
        </ul>
      </div>
      <%= partial :sector_controls unless @country[:name] == "World" %>
    </div>